 
@{
    ViewBag.Title = "Ürünler";
}

@using Mvc_Template.Models
  @model List<Urunler>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürünler
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Urun/UrunEkle" class="btn btn-success rounded">Yeni Ürün</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Ürün Adı</th>
                                <th>Tedarikçi</th>
                                <th>Kategori</th>
                                <th>Birimdeki Miktar</th>
                                <th>Fiyat</th>
                                <th>Stok</th>
                                <th>En Az Yeniden Satış Miktarı</th>
                                <th>Sonlandı</th>
                                <th>Detay</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Urunler u in Model)
                            {
                                <tr>
                                <td>@u.UrunAdi</td>
                                    @if (u.Tedarikciler == null)
                                    {
                                        <td></td>
                                    }
                                    else
                                    {
                                        
                                <td><span class="label label-primary">@u.Tedarikciler.SirketAdi</span></td>

                                    }
                                    @if (u.Kategoriler == null)
                                    {
                                        <td></td>
                                    }
                                    else
                                    {

                                        <td><span class="label label-info">@u.Kategoriler.KategoriAdi</span></td>

                                    }
                                <td>@u.BirimdekiMiktar</td>
                                <td>@u.BirimFiyati</td>
                                <td>@u.HedefStokDuzeyi</td>
                                <td>@u.EnAzYenidenSatisMikatari</td>
                                    @if (u.Sonlandi)
                                    {
                                        <td><span class="label label-danger" >Stokta Yok</span></td>
                                    }
                                    else
                                    {
                                   <td><span class="label label-success" >Stokta Var</span></td>
                                     }
                                    <td><a class="btn btn-primary" href="/Urun/UrunDetay?id=@u.UrunID&adi=@u.UrunAdi">Detay</a></td>
                                <td><a class="btn btn-danger rounded" href="/Urun/Sil/@u.UrunID" >Sil</a></td>
                            </tr>
                                
                            }
                            
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>