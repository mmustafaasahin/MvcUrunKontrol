
@{
    ViewBag.Title = "CookieAta";
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
Cookie'ye Değer Atma Sayfası</div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Home/CookieAta" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Cookie Adı</label>
                            <input type="text" name="CookieAdi" class="form-control" id="exampleInputEmail1" placeholder="Cookie Adı Giriniz...">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Cookie Değeri</label>
                            <input type="text" name="CookieDegeri" class="form-control" id="exampleInputPassword1" placeholder="Cookie Değeri Giriniz...">
                        </div>


                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

