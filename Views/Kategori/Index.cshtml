
@{
    ViewBag.Title = "Kategoriler";
}

@using Mvc_Template.Models
@model List<Kategoriler>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kategoriler
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                <a href="/Kategori/Ekle" class="btn btn-success" >Yeni Kategori</a>
                </div>
            </div>
            <div class="block-content-outer">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Kategori Adı</th>
                            <th>Tanımı</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Kategoriler ktg in Model)
                        {
                            <tr>
                                <td>@ktg.KategoriAdi</td>
                                <td>@ktg.Tanimi</td>
                                <td><a href="/Kategori/Guncelle/@ktg.KategoriID" class="btn btn-primary" >Güncelle</a></td>
                                <td><a href="#" class="btn btn-danger ktgSil" data-ktgid="@ktg.KategoriID">Sil</a></td>
                            </tr>
                            
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

@section scripts{
<script src="~/Content/assets/js/required/jquery-1.11.1.min.js"></script>

<script>
    $(".ktgSil").click(function(){
        var sonuc = confirm("Kayıt Silinsin mi ?");
        if (sonuc) {
            var ktgId = $(this).data("ktgid");
            $.ajax({

                type: "POST",
                url: "/Kategori/Sil/" + ktgId,
                success: function () {
                    alert("Kayıt Silindi");
                    window.location.replace("/Kategori/Index");
                }, error: function () {
                    alert("Kayıt silinme sırasında hata oluştu");
                }


            });
        }
        else {
            
        }
    });
</script>
 }